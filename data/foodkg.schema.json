{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Recipe Recommendation",
  "description": "Recipe query, options, and correct answer",
  "type": "object",
  "properties": {
    "query": {
      "description": "Recipe query",
      "type": "string"
    },
    "query_type": {
      "description": "Query type labels where true/false represented by 1/0",
      "type": "object",
      "properties": {
        "General": {
          "type": "number",
          "maximum": 1,
          "minimum": 0
        },
        "Specific": {
          "type": "number",
          "maximum": 1,
          "minimum": 0
        },
        "Indirect": {
          "type": "number",
          "maximum": 1,
          "minimum": 0
        },
        "Direct": {
          "type": "number",
          "maximum": 1,
          "minimum": 0
        },
        "Objective": {
          "type": "number",
          "maximum": 1,
          "minimum": 0
        },
        "Subjective": {
          "type": "number",
          "maximum": 1,
          "minimum": 0
        },
        "Simple": {
          "type": "number",
          "maximum": 1,
          "minimum": 0
        },
        "Compound": {
          "type": "number",
          "maximum": 1,
          "minimum": 0
        },
        "Negated": {
          "type": "number",
          "maximum": 1,
          "minimum": 0
        },
        "Analogical": {
          "type": "number",
          "maximum": 1,
          "minimum": 0
        },
        "Temporal": {
          "type": "number",
          "maximum": 1,
          "minimum": 0
        }
      },
      "required": ["General", "Specific", "Indirect", "Direct", "Objective", "Subjective", "Simple", "Compound", "Negated", "Analogical", "Temporal"]
    },
    "options": {
      "description": "Recipe ID and text description pairs",
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9]$": {
          "type": "string"
        }
      },
      "minProperties": 5,
      "maxProperties": 5
    },
    "answer": {
      "description": "Recipe ID of correct choice",
      "type": "string"
    },
    "explanations": {
      "description": "Explanations for why incorrect options are wrong",
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9]$": {
          "type": "string"
        }
      },
      "minProperties": 4,
      "maxProperties": 4
    }
  },
  "required": ["query", "query_type", "options", "answer", "explanations"]
}

